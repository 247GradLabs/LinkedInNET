<?xml version="1.0" encoding="utf-8"?>
<Root>
  <ApiGroup Name="Profiles">
    <ApiMethod MethodName="GetMyProfile" HttpMethod="GET" ReturnType="Person" Path="/v2/me?{FieldSelector}"
      Title="the profile of the current user" Remark="See https://developer.linkedin.com/docs/guide/v2/people/profile-api"
      RequiresUserAuthentication="1" UsesAcceptLanguage="1" />

    <ReturnType Name="person" ClassName="Person" AutoGenerateFieldSelectors="1">
      <!-- Basic profile fields -->
      <Field Name="id" Title="a unique identifier token for this member" />
      <Field Name="firstName" Type="Common.MultiLocaleString">
        <Field Name="localized" PropertyName="Localized"/>
        <Field Name="preferredLocale" PropertyName="PreferredLocale"/>
      </Field>
      <Field Name="lastName" Type="Common.MultiLocaleString">
        <Field Name="localized" PropertyName="Localized"/>
        <Field Name="preferredLocale" PropertyName="PreferredLocale"/>
      </Field>
      <Field Name="maidenName" Type="Common.MultiLocaleString" >
        <Field Name="localized" PropertyName="Localized"/>
        <Field Name="preferredLocale" PropertyName="PreferredLocale"/>
      </Field>
      <Field Name="phoneticFirstName" Type="Common.MultiLocaleString">
        <Field Name="localized" PropertyName="Localized"/>
        <Field Name="preferredLocale" PropertyName="PreferredLocale"/>
      </Field>
      <Field Name="phoneticLastName" Type="Common.MultiLocaleString" >
        <Field Name="localized" PropertyName="Localized"/>
        <Field Name="preferredLocale" PropertyName="PreferredLocale"/>
      </Field>
      <Field Name="headline" Type="Common.MultiLocaleString">
        <Field Name="localized" PropertyName="Localized"/>
        <Field Name="preferredLocale" PropertyName="PreferredLocale"/>
      </Field>
      <Field Name="location" Type="Location" Title="a unique identifier token for this member"/>
      <Field Name="industryName" Type="Common.MultiLocaleRichText" >
        <Field Name="localized" PropertyName="Localized"/>
        <Field Name="preferredLocale" PropertyName="PreferredLocale"/>
      </Field>
      <Field Name="summary" Type="Common.MultiLocaleRichText">
        <Field Name="localized" PropertyName="Localized"/>
        <Field Name="preferredLocale" PropertyName="PreferredLocale"/>
      </Field>
      <Field Name="specialties" Type="Common.MultiLocaleRichText" />
      <Field Name="positions" Type="Position" />
      <Field Name="profilePicture" Type="ProfilePicture">
        <FieldSelector Name="profilePicture(displayImage~~~playableStreams)" PropertyName="DisplayImageLoaded" />
      </Field>
      <Field Name="vanityName" Title="a unique identifier token for this member" />
      <Field Name="lastModified" Type="long?" Title="a unique identifier token for this member" />
      <Field Name="organizations" Type="JObject" Title="a unique identifier token for this member" />
    </ReturnType>

    <ReturnType Name="location" ClassName="Location">
      <Field Name="countryCode" PropertyName="CountryCode"/>
      <Field Name="postalCode" PropertyName="PostalCode" />
      <Field Name="standardizedLocationUrn" PropertyName="StandardizedLocationUrn" />
      <Field Name="userSelectedGeoPlaceCode" PropertyName="UserSelectedGeoPlaceCode" />
    </ReturnType>

    <ReturnType Name="position" ClassName="Position">
      <Field Name="id" PropertyName="Id" />
      <Field Name="company" PropertyName="Company" />
      <Field Name="companyName" PropertyName="CompanyName" Type="Common.MultiLocaleString"/>
      <Field Name="description" PropertyName="Description" Type="Common.MultiLocaleRichText"/>
      <Field Name="endMonthYear" PropertyName="EndMonthYear" Type="DateParts"/>
      <Field Name="location" PropertyName="Location" Type="Location"/>
      <Field Name="locationName" PropertyName="LocationName" Type="Common.MultiLocaleRichText"/>
      <Field Name="richMediaAssociations" PropertyName="RichMediaAssociations" IsCollection="1" Type="RichMediaURN"/>
      <Field Name="startMonthYear" PropertyName="startMonthYear" Type="DateParts"/>
      <Field Name="title" PropertyName="Title" Type="Common.MultiLocaleString"/>
    </ReturnType>

    <ReturnType Name="dateParts" ClassName="DateParts">
      <Field Name="year" Type="short?" />
      <Field Name="month" Type="short?" />
      <Field Name="day" Type="short?" />
    </ReturnType>

    <ReturnType Name="richMediaURN" ClassName="RichMediaURN">
      <Field Name="content" PropertyName="Content" Type="JObject"/>
      <Field Name="description" PropertyName="Description" Type="Common.MultiLocaleRichText"/>
      <Field Name="id" PropertyName="Id" Type="long?"/>
      <Field Name="member" PropertyName="Member" Type="JObject"/>
      <Field Name="thumbnailImage" PropertyName="ThumbnailImage" Type="JObject"/>
      <Field Name="title" PropertyName="title" Type="Common.MultiLocaleString"/>
    </ReturnType>

    <ReturnType Name="profilePicture" ClassName="ProfilePicture">
      <Field Name="displayImage" />
      <Field Name="displayImage~" PropertyName="DisplayImageLoaded" Type="DisplayImageLoaded"/>
    </ReturnType>

    <ReturnType Name="displayImageLoaded" ClassName="DisplayImageLoaded">
      <Field Name="elements" Type="DisplayImageElements" IsCollection="1"/>
    </ReturnType>

    <ReturnType Name="displayImageElements" ClassName="DisplayImageElements">
      <Field Name="artifact"  />
      <Field Name="authorizationMethod"  />
      <Field Name="identifiers" Type="DisplayImageElementIdentifiers" IsCollection="1"/>
    </ReturnType>

    <ReturnType Name="displayImageElementIdentifiers" ClassName="DisplayImageElementIdentifiers">
      <Field Name="identifier"  />
      <Field Name="file"  />
      <Field Name="index"  />
      <Field Name="mediaType"  />
      <Field Name="identifierExpiresInSeconds" Type="long?" />
    </ReturnType>


    <FieldGroup Name="BasicFields">
      <Name Name="id" />
      <Name Name="firstName" />
      <Name Name="lastName" />
      <Name Name="maidenName" />
      <Name Name="phoneticFirstName" />
      <Name Name="phoneticLastName" />
      <Name Name="headline" />
      <Name Name="location" />
      <Name Name="industryName" />
      <Name Name="summary" />
      <Name Name="specialties"/>
      <Name Name="positions" />
      <Name Name="pictureInfo" />
      <Name Name="profilePicture" />
      <Name Name="vanityName" />
      <Name Name="lastModified" />
    </FieldGroup>
  </ApiGroup>


  <ApiGroup Name="Organizations">
    <ApiMethod MethodName="GetById" HttpMethod="GET" Path="/v2/organizations/{CompanyId}" ReturnType="Organization"
      Title="retrieve a company by using the company ID"
      RequiresUserAuthentication="1" Remark="See https://developer.linkedin.com/docs/guide/v2/organizations/organization-lookup-api"/>

    <ApiMethod MethodName="GetUserAdminApprOrganizations" HttpMethod="GET"
              Path="/v2/organizationalEntityAcls?q=roleAssignee&amp;role=ADMINISTRATOR&amp;state=APPROVED&amp;{FieldSelector}" ReturnType="OrganizationalEntityAcls"
              Title="retrieve list of companies where current user is administrator and is approved"
              RequiresUserAuthentication="1" Remark="See https://developer.linkedin.com/docs/guide/v2/organizations/organization-lookup-api"/>

    <ApiMethod MethodName="GetOrgFollowerStatistics" HttpMethod="GET"
                    Path="/v2/organizationalEntityFollowerStatistics?q=organizationalEntity&amp;organizationalEntity=urn:li:organization:{CompanyId}"
                    ReturnType="OrgFollowerStatistic"
                    RequiresUserAuthentication="1"
                    UseFieldSelectors="0"
                    Title="Retrieve Follower Statistics"
                    Remark="See https://developer.linkedin.com/docs/guide/v2/organizations/follower-statistics" />

    <ReturnType Name="organization" ClassName="Organization" AutoGenerateFieldSelectors="1">
      <Field Name="id" Type="long" IsDefault="1" />
      <Field Name="name" Type="Common.MultiLocaleString" IsDefault="1" />
      <Field Name="logo" Type="CroppedImage" />
      <Field Name="vanityName" />
    </ReturnType>

    <ReturnType Name="croppedImage" ClassName="CroppedImage">
      <Field Name="height" Type="int" />
      <Field Name="width" Type="int" />
      <Field Name="x" Type="int"  />
      <Field Name="y" Type="int" />
      <Field Name="cropped" />
      <Field Name="original" />
    </ReturnType>

    <ReturnType Name="OrganizationalEntityAcls" ClassName="OrganizationalEntityAcls" AutoGenerateFieldSelectors="1">
      <Field Name="elements" Type="OrgEntElements" IsCollection="1">
        <FieldSelector Name="elements*(*,organizationalTarget~(id))" PropertyName="OrgEntElementsId" />
        <FieldSelector Name="elements*(*,organizationalTarget~(logo))" PropertyName="OrgEntElementsLogo" />
        <FieldSelector Name="elements*(*,organizationalTarget~(name))" PropertyName="OrgEntElementsName" />
        <FieldSelector Name="elements*(*,organizationalTarget~(id,logo,name))" PropertyName="OrgEntElementsAll" />
      </Field>
    </ReturnType>

    <ReturnType Name="OrgEntElements" ClassName="OrgEntElements" AutoGenerateFieldSelectors="1">
      <Field Name="state" />
      <Field Name="role" />
      <Field Name="roleAssignee" />
      <Field Name="organizationalTarget" />
      <Field Name="organizationalTarget~" PropertyName="Organization" Type="Organization">
        <FieldSelector Name="organizationalTarget~(id)" PropertyName="Organization" />
      </Field>
    </ReturnType>


    <ReturnType Name="OrgFollowerStatistic" ClassName="OrgFollowerStatistic" AutoGenerateFieldSelectors="1">
      <Field Name="elements" ClassName="OrgFollowerStatisticsElement" Type="OrgFollowerStatisticsElement" IsCollection="1"/>
      <Field Name="organizationalEntity" />
    </ReturnType>

    <ReturnType Name="OrgFollowerStatisticsElement" ClassName="OrgFollowerStatisticsElement" AutoGenerateFieldSelectors="1">
      <Field Name="totalFollowerCounts" ClassName="TotalFollowerCounts" Type="TotalFollowerCounts"/>
    </ReturnType>

    <ReturnType Name="totalFollowerCounts" ClassName="TotalFollowerCounts" AutoGenerateFieldSelectors="1" >
      <Field Name="organicFollowerCount" Type="int"/>
      <Field Name="paidFollowerCount" Type="int"/>
    </ReturnType>

  </ApiGroup>

  <ApiGroup Name="Shares">
    <ApiMethod MethodName="Post" HttpMethod="POST"
                   Path="/v2/shares"
                   PostReturnType="Common.PostShare"
                   ReturnType="Common.PostShareResult"
                   RequiresUserAuthentication="1"
                   UseFieldSelectors="0"
                   Title="Share a profile/ company update based on an existing update."
                   Remark="See https://developer.linkedin.com/docs/guide/v2/shares/share-api" />


    <ApiMethod MethodName="GetShareStatistics" HttpMethod="GET"
                     Path="/v2/organizationalEntityShareStatistics?q=organizationalEntity&amp;organizationalEntity=urn:li:organization:{CompanyId}&amp;shares[0]=urn:li:share:{ShareId}"
                     ReturnType="StareStatistic"
                     RequiresUserAuthentication="1"
                     UseFieldSelectors="0"
                     Title="Fetch lifetime share statistics for two specific organization shares."
                     Remark="See https://developer.linkedin.com/docs/guide/v2/organizations/share-statistics" />

    <ApiMethod MethodName="GetShares" HttpMethod="GET"
                 Path="/v2/shares?q=owners&amp;owners={urn}&amp;sharesPerOwner={int SharesPerOwner = 1000}&amp;count={int Count = 50}&amp;start={int Start = 0}"
                 ReturnType="PostShares"
                 RequiresUserAuthentication="1"
                 UseFieldSelectors="0"
                 Title="Shares will be ordered by created time with the latest one being the first. 
                 We recommend setting the sharesPerOwner to 1,000 and count to 50, which means our endpoint will return up to 1,000 shares per owner while the total elements returned per response will be 50. If you want the next 50 of 1,000, you will have to paginate with start query parameter."
                 Remark="See https://developer.linkedin.com/docs/guide/v2/shares/share-api#types" />

    <ReturnType Name="StareStatistic" ClassName="StareStatistic" AutoGenerateFieldSelectors="1">
      <Field Name="elements" ClassName="ShareStatisticsElement" Type="ShareStatisticsElement" IsCollection="1"/>
    </ReturnType>

    <ReturnType Name="ShareStatisticsElement" ClassName="ShareStatisticsElement" AutoGenerateFieldSelectors="1">
      <Field Name="totalShareStatistics" ClassName="TotalShareStatistics" Type="TotalShareStatistics"/>
      <Field Name="share" />
      <Field Name="organizationalEntity" />
    </ReturnType>

    <ReturnType Name="totalShareStatistics" ClassName="TotalShareStatistics" AutoGenerateFieldSelectors="1" >
      <Field Name="shareCount" Type="int"/>
      <Field Name="clickCount" Type="int"/>
      <Field Name="engagement" Type="double"/>
      <Field Name="likeCount" Type="int"/>
      <Field Name="impressionCount" Type="int"/>
      <Field Name="commentCount" Type="int"/>
    </ReturnType>

    <ReturnType Name="PostShares" ClassName="PostShares" AutoGenerateFieldSelectors="1">
      <Field Name="elements" ClassName="PostShareResult" Type="Common.PostShareResult" IsCollection="1"/>
      <Field Name="paging" ClassName="Paging" Type="Common.Paging" />
    </ReturnType>

  </ApiGroup>


  <ApiGroup Name="Common">
    <ReturnType Name="PostShare">
      <Field Name="owner" />
      <Field Name="text" Type="PostShareText" />
      <Field Name="subject" />
      <Field Name="distribution"  Type="Distribution" />
      <Field Name="content" Type="PostShareContent" />
    </ReturnType>

    <ReturnType Name="text" ClassName="PostShareText">
      <Field Name="text" />
    </ReturnType>

    <ReturnType Name="postShareContent" ClassName="PostShareContent">
      <Field Name="contentEntities" Type="PostShareContentEntities" IsCollection="1"/>
      <Field Name="title"/>
    </ReturnType>

    <ReturnType Name="postShareContentEntities" ClassName="PostShareContentEntities">
      <Field Name="entityLocation"/>
      <Field Name="thumbnails" Type="PostShareContentThumbnails" IsCollection="1" />
    </ReturnType>

    <ReturnType Name="PostShareContentThumbnails" ClassName="PostShareContentThumbnails">
      <Field Name="imageSpecificContent" Type="JObject"   />
      <Field Name="publishers"  Type="JObject"   />
      <Field Name="resolvedUrl" />
      <Field Name="authors" Type="JObject" />
    </ReturnType>

    <ReturnType Name="PostShareResult">
      <Field Name="owner" />
      <Field Name="activity" />
      <Field Name="edited" Type="bool"  />
      <Field Name="created" Type="ShareTime"  />
      <Field Name="subject" />
      <Field Name="id" />
      <Field Name="lastModified" Type="ShareTime" />
      <Field Name="text" Type="PostShareText" />
      <Field Name="distribution"  Type="Distribution"  />
      <Field Name="content" Type="PostShareContent"/>
    </ReturnType>

    <ReturnType Name="multiLocaleString" ClassName="MultiLocaleString">
      <Field Name="localized" PropertyName="Localized" Type="JObject" />
      <Field Name="preferredLocale" PropertyName="PreferredLocale" Type="JObject" />
    </ReturnType>

    <ReturnType Name="multiLocaleRichText" ClassName="MultiLocaleRichText">
      <Field Name="localized" PropertyName="Localized" Type="JObject" />
      <Field Name="preferredLocale" PropertyName="PreferredLocale" Type="JObject" />
    </ReturnType>

    <ReturnType Name="shareCreated" ClassName="ShareTime">
      <Field Name="actor"/>
      <Field Name="time" Type="long" />
    </ReturnType>

    <ReturnType Name="distribution" ClassName="Distribution">
      <Field Name="linkedInDistributionTarget" PropertyName="LinkedInDistributionTarget" Type="LinkedInDistributionTarget" />
    </ReturnType>

    <ReturnType Name="LlinkedInDistributionTarget" ClassName="LinkedInDistributionTarget">
      <Field Name="visibleToGuest" PropertyName="VisibleToGuest" Type="bool" />
    </ReturnType>

    <ReturnType Name="paging" ClassName="Paging">
      <Field Name="total" PropertyName="Total" Type="int" />
      <Field Name="count" PropertyName="Count" Type="int" />
      <Field Name="start" PropertyName="Start" Type="int" />      
    </ReturnType>

  </ApiGroup>
</Root>
